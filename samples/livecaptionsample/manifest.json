{
  "manifest_version": 3,
  "name": "Offline Live Caption",
  "description": "Offline captioning for browser audio, mic, and uploaded files.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Live Captions"
  },
  "background": {
    "service_worker": "background.js"
  }
}